<mujoco model="cartpole">
  <compiler angle="radian" coordinate="local" inertiafromgeom="true"/>
  <custom>
    <numeric data="2" name="frame_skip"/>
  </custom>
  <default>
    <joint damping="0.03"/>
  </default>
	<option timestep="0.005"/>
  <size nstack="3000"/>
  <asset>
    <texture name="texplane" type="2d" builtin="checker" rgb1="0.2 0.2 0.2" rgb2="1 1 1" width="1000" height="1000" />
    <material name='MatPlane' texture="texplane" shininess="0" texrepeat="100 100" specular="1"  reflectance="0.2" />
  </asset>
  <worldbody>
     <geom name="floor" material="MatPlane" pos="0 0 -0.5" rgba="0.8 0.9 0.8 1" size="40 40 40" type="plane"/>
    <!--geom name="rail" pos="0 0 0" quat="0.707 0 0.707 0" rgba="0.3 0.3 0.7 1" size="0.02 1" type="capsule"/-->
        <geom name="box" size="0.08 0.08 0.48" pos="0 0 -0.5" rgba="0.4 0.4 0.6 1" type="box"/>
    <body name="cart" pos="0 0 0">
		<joint axis="0 0 1" limited="true" margin="0.01" name="slider" pos="0 0 0" range="-1.570796 1.570796" type="hinge" />
      <geom name="cart" pos="0.10795 0 0" quat="1 1 1 1" rgba=".2 .2 .2 1" size="0.02 0.10795" type="capsule" mass="0.257"/>

      <body name="pole" pos="0.2159 0 0">
        <joint axis="1 0 0" name="hinge" pos="0 0 0" type="hinge"/>
        <geom fromto="0 0 0 0 0 0.337" name="cpole" rgba="0 0.4 0.8 1" size="0.02 0.337" type="capsule" mass="0.127"/>
        <site name="tip" pos="0 0 0.337" size="0.01 0.01"/>

        <!--body name="encoder" pos="0 0 0.1685">
          <geom name="encoder_geom" rgba="1 0.4 0.8 1" size="0.02 0.02" type="capsule" mass="0.141"/>
        </body-->

        <!--site name="tip" pos="0 0 .6" size="0.01 0.01"/-->

        <!--body name="pole2" pos="0 0 0.2">
          <joint axis="1 0 0" name="hinge2" pos="0 0 0" range="-0.523599 0.523599" type="hinge"/>
          <geom fromto="0 0 0 0 0 0.6" name="cpole2" rgba="1 0.2 0.8 1" size="0.02 0.3365" type="capsule" mass="0.127"/>
          <site name="tip" pos="0 0 .6" size="0.01 0.01"/>


        </body-->
      </body>
    </body>
  </worldbody>
  <actuator>
    <motor ctrllimited="true" ctrlrange="-1 1" gear="70" joint="slider" name="slide"/>
  </actuator>

  <sensor>
    <jointpos name='sensor_slider'  joint='slider'/>
    <jointpos name='sensor_hinge'  joint='hinge'/>
    <!--jointpos name='sensor_hinge2'  joint='hinge2'/-->


  </sensor>
</mujoco>